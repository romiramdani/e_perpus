<%- include('../../components/admin/upside') %>
<div id="content">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-center">Daftar Buku</h1>
            <a href="/adminBooks/add" class="btn btn-success">Tambah Buku</a>
        </div>

        <!-- Row untuk daftar buku -->
        <div class="row">
            <% if (books.length > 0) { %>
                <% books.forEach(book => { %>
                    <div class="col-md-2 mb-4">
                        <div class="card" style="min-height: 350px; display: flex; flex-direction: column; justify-content: space-between;">
                            <img src="/image/books/<%= book.gambar %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title" style="min-height: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= book.judul %></h5>
                                <a href="/adminBooks/<%= book.id %>" class="btn btn-primary mt-auto w-100">Detail</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center">No book available</p>
            <% } %>
        </div>
    </div>
</div>
<%- include('../../components/admin/bottomside') %>
