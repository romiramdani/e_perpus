<%- include('../components/client/upside') %>
    <div id="content">
        <div class="container-fluid">
            <h1 class="text-center">Buku yang Dipinjam</h1>
            <% if (history.length > 0) { %>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Judul Buku</th>
                            <th>Tanggal Peminjaman</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% history.forEach((h, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= h.judul %></td>
                                <td><%= h.tanggal_peminjaman %></td>
                                <td><%= h.status %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p class="text-center">Anda belum meminjam buku apapun.</p>
            <% } %>
        </div>
    </div>
<%- include('../components/client/bottomside') %>



